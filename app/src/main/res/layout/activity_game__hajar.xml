<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r1"
    android:layout_width="match_parent"
    android:background="@drawable/bg4"
    android:layout_height="match_parent"
    tools:context="fungame.idea.sparks.fungame.Game_Hajar">
<LinearLayout
    android:id="@+id/l1"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/txtcolor"
        android:id="@+id/txt1"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:text="IN"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <ListView
        android:id="@+id/lv_in"
        android:layout_width="100dp"
        android:layout_height="match_parent"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/l5"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_main_in"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/l5"
            android:src="@drawable/blank_card" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l6"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="147dp"
        android:layout_marginRight="147dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_main_out"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/blank_card" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="138dp"
        android:layout_marginLeft="138dp"
        android:layout_marginBottom="62dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt3"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="IN"
            android:textColor="@color/txtcolor"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_in"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/l3"
            android:layout_alignBottom="@+id/l3"
            android:src="@drawable/blank_card"
            android:layout_alignLeft="@+id/l3" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/l3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt4"
            android:layout_width="80dp"
            android:layout_height="28dp"

            android:gravity="center"
            android:text="OUT"
            android:textColor="@color/txtcolor"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_out"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/l4"
            android:src="@drawable/blank_card" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/txtcolor"
            android:id="@+id/txt2"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="OUT"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lv_out"
            android:layout_width="100dp"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/l1"
        android:orientation="vertical"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/l1">

        <TextView
            android:id="@+id/user"
            android:layout_width="65dp"
            android:layout_height="19dp"
            android:text="Name"
            android:textColor="@color/txtcolor"
            android:textSize="17sp" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="19dp"
            android:text="Balance"
            android:textColor="@color/txtcolor"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/in_out"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textOff="OUT"
            android:textOn="IN"
             />
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="CARD"
            android:id="@+id/select_card"/>

        <Button
            android:id="@+id/select_coin"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="COIN" />

        <Button
            android:id="@+id/bid"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="BID" />
    </LinearLayout>
</RelativeLayout>
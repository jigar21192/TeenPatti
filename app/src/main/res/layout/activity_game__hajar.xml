    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/l1"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/l1">

        <TextView
            android:id="@+id/h_username"
            android:layout_width="78dp"
            android:layout_height="19dp"
            android:fontFamily="@font/fontrec"
            android:gravity="center"
            android:text="Name"
            android:textColor="@color/txtcolor"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/h_balance"
            android:layout_width="78dp"
            android:layout_height="19dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fontrec"
            android:text="Balance"
            android:gravity="center"
            android:textColor="@color/txtcolor"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/select_card"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/roundshape"
            android:text="CARD"
            android:textColor="@color/btntxtcolor" />

        <Button
            android:id="@+id/select_coin"
            android:layout_width="70dp"
            android:layout_height="30dp"

            android:layout_margin="10dp"
            android:background="@drawable/roundshape"
            android:text="COIN"
            android:textColor="@color/btntxtcolor" />

        <Button
            android:id="@+id/bid"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/roundshape"
            android:text="BID"
            android:textColor="@color/btntxtcolor" />

        <Button

            android:id="@+id/history_bid"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:background="@drawable/roundshape"
            android:text="History"
            android:textColor="@color/btntxtcolor" />
    </LinearLayout>
